# EchoScan Configuration
# Copy this file to .env and update with your actual credentials

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-domain.webhook.office.com/webhookb2/YOUR/TEAMS/WEBHOOK
AWS_LAMBDA_WEBHOOK_URL=https://your-lambda-function-url.amazonaws.com/webhook
SIEM_WEBHOOK_URL=https://your-siem-endpoint.com/api/events
CUSTOM_WEBHOOK_URL=https://your-custom-endpoint.com/webhook

# Jira Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ
JIRA_ISSUE_TYPE=Bug

# Webhook Settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRIES=3
ENABLE_WEBHOOKS=true

# SBSM ML Configuration
SBSM_ADAPTIVE_REFRESH=true
SBSM_CONFIDENCE_THRESHOLD=0.8
SBSM_UPDATE_FREQUENCY=100

# UI Configuration
UI_EXCITEMENT_ENABLED=true
UI_CONFETTI_ENABLED=true
UI_BALLOONS_ENABLED=true